{
  "name": "oracle-esw",
  "config": {
    "connector.class": "io.debezium.connector.oracle.OracleConnector",
    "tasks.max": "1",

    "database.hostname": "host.docker.internal",
    "database.port": "1521",
    "database.user": "ESW_READONLY",
    "database.password": "EswReadonly123",

  "database.url": "jdbc:oracle:thin:@//host.docker.internal:1521/free",

  "database.dbname": "FREE",
  "database.pdb.name": "ESWTEST",
    "database.connection.adapter": "logminer",

    "log.mining.strategy": "online_catalog",

    "snapshot.mode": "initial",
    "snapshot.locking.mode": "none",

    "internal.log.mining.read.only": "true",

    "table.include.list": "^(ESWTEST\\.)?ESW\\.TB_CB_LPCO($|_(?!CMDT$).*)$",

    "topic.prefix": "oracle_esw",

    "transforms": "route",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "^oracle_esw\\.ESW\\.(.*)$",
    "transforms.route.replacement": "raw-$1",

    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schemahistory.oracle_esw",

    "tombstones.on.delete": "false",

    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",

    "value.converter": "io.apicurio.registry.utils.converter.AvroConverter",
    "value.converter.apicurio.registry.url": "http://apicurio:8080/apis/registry/v2",
    "value.converter.apicurio.registry.auto-register": "true",
    "value.converter.apicurio.registry.find-latest": "true",
    "value.converter.apicurio.registry.artifact.group-id": "oracle-esw",
    "value.converter.apicurio.registry.headers.enabled": "false",
    "value.converter.apicurio.registry.as-confluent": "true",
    "value.converter.apicurio.registry.use-id": "contentId",
    "value.converter.apicurio.registry.id-handler": "io.apicurio.registry.serde.Legacy4ByteIdHandler"
  }
}
